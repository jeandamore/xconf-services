{
  "consumer": {
    "name": "client"
  },
  "provider": {
    "name": "account-service"
  },
  "interactions": [
    {
      "description": "a health check request",
      "provider_state": "the service is ready",
      "request": {
        "method": "get",
        "path": "/",
        "headers": {
          "Accept": "application/json"
        }
      },
      "response": {
        "status": 200,
        "body": "Account Service is up"
      }
    },
    {
      "description": "a new account creation request",
      "provider_state": "there is no account",
      "request": {
        "method": "post",
        "path": "/",
        "headers": {
          "Accept": "application/json"
        },
        "body":  {
          "name": "new_account_name"
        }
      },
      "response": {
        "status": 201
      }
    },
    {
      "description": "a creation request for an existing account",
      "provider_state": "there is an existing account",
      "request": {
        "method": "post",
        "path": "/",
        "headers": {
          "Accept": "application/json"
        },
        "body":  {
          "name": "existing_account"
        }
      },
      "response": {
        "status": 409
      }
    },
    {
      "description": "an account retrieval request",
      "provider_state": "there is no account",
      "request": {
        "method": "get",
        "path": "/the_name",
        "headers": {
          "Accept": "application/json"
        }
      },
      "response": {
        "status": 428,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "the_name",
          "balance": 42
        }
      }
    }
  ],
  "metadata": {
    "pactSpecificationVersion": "2.0.0"
  }
}